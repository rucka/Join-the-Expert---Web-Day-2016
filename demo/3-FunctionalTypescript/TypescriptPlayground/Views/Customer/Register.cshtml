
@{
    ViewBag.Title = "Register";
}
@model TypescriptPlayground.Controllers.CustomerInfo

@section scripts {
    <script type="text/javascript" src="~/Scripts/app/optional.js"></script>
    <script type="text/javascript" src="~/Scripts/app/async.js"></script>
    <script type="text/javascript" src="~/Scripts/app/validation.js"></script>
    <script type="text/javascript" src="~/Scripts/app/register.js"></script>
}

<h2>Register Customer</h2>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Register", "Customer")) { 
            <div class="form-group">
                <label for="name">*Customer name</label>
                @Html.TextBoxFor(m => m.Name, new {type="text", @class="form-control", placeholder="Name" })
            </div>
            <div class="form-group">
                <label for="email">*Email address</label>
                @Html.TextBoxFor(m => m.Email, new { type = "text", @class = "form-control", placeholder = "Email" })
            </div>
            <div class="form-group">
                <label for="vat">*VAT number</label>
                @Html.TextBoxFor(m => m.VATCode, new { type = "text", @class = "form-control", placeholder = "Vat" })
            </div>
            <div class="form-group">
                <label for="url">Website</label>
                @Html.TextBoxFor(m => m.Website, new { type = "text", @class = "form-control", placeholder = "Website" })
            </div>
            <div class="checkbox">
                <label>
                    @Html.TextBoxFor(m => m.Accept, new { type = "checkbox" })*terms accepted
                </label>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        }
    </div>
    <div class="col-md-6 text-danger"><ul id="errors" class="hidden"><li>error 1</li><li>error 2</li></ul></div>
</div>

